#include <iostream>
#include <queue>
using namespace std;

// kuyruðun elemanlarýný yazdýrýr
template <typename T>
void kuyruk_yazdir(queue<T> q){  // eðer burada referansýný verirsek yani & iþareti eklenirse kuruktaki elemanlarý gerçekten atmýþ oluruz
    while (!q.empty()){
        cout << q.front() << "";
        q.pop();
    }
    cout << endl;
}
int main() {

    //kuyruk oluþturalým
    queue<int> q;

    cout << "kuyruk boþ mu dolu mu : " << q.empty();
    q.push(1);
    q.push(2);
    q.push(3); // üç elman eklendi
    cout << endl << "kuyruk boþ mu dolu mu : " << q.empty();
    cout << endl << "kuyruðun en baþý : " << q.front();
    cout << endl << "kuyruðun en sonu : " << q.back();
    cout << endl << "kuyruðun boyutu : " << q.size();


    cout << endl;
    kuyruk_yazdir(q);

    //eleman çýkarma
    q.pop(); // en sondan elman çýkarýr
    kuyruk_yazdir(q);
    cout << endl << "kuyruðun yeni boyutu : " << q.size();
    cout << endl << "kuyruðun en baþý : " << q.front(); // DÝKKAT ilk gireni çýkardý!!!

    // kurucu metod ile kopayalama
    queue<int> q1 (q);
    cout << endl << "yeni kuyruðun en baþý : " << q1.front();
    cout << endl << "yeni kuyruðun en sonu : " << q1.back();

    //kuytuk elemanlarýný yazdýralým
    cout << endl;
    kuyruk_yazdir(q);
    kuyruk_yazdir(q1);

    return 0;
} // main sonu

