#include <iostream>
#include <sstream>

using namespace std;

class calisan{
private:
	string isim;
	double para;
public:
	calisan(){
		isim = "Ali";
		para = 0;
	}
	calisan(string ad, double ucret){
		isim = ad;
		para = ucret;
	}

	void setAd(string ad){
		isim = ad;
	}

	string getAd(){
		return isim;
	}

	void setUcret(double ucret){
		para = ucret;
	}

	double getUcret(){
		return para;
	}

	string toString(){
		stringstream abc;
		abc << isim << " : " << para;
		return abc.str();
	}

}; // Class sonu

int main() {
	cout << "Kal覺t覺m" << endl; // prints Kal覺t覺m

	// objeler
	calisan personel1("Ahmet", 5000);
	cout << personel1.toString() << endl;

	return 0;
}
