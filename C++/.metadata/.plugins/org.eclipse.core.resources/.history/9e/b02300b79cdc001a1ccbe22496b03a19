#include <iostream>
using namespace std;

class Employee{
private:
	string name;
	int age;
public:
	Employee(string name){
		this name = name; // this pointer Class'a özgüdür
	}
	Employee(string isim, int yas){ // Constuctor class ile aynı isime sahip olamalı. bu bir kuraldır.
		name = isim;
		age = yas;
	}
	void showInfos(){
		cout << "Name : " << name << endl;
		cout << "Age : " << age << endl;
	}
};

int main() {
	cout << "Constructor Overloading" << endl; // prints Constructor Overloading
	return 0;
}
