#include <iostream>
using namespace std;

int main() {
	cout << "Try Catch" << endl; // prints Try Catch


	try{
		cout << "bir deger gir : " ;
		int a;
		cin >> a;
		throw 40; // hata deðeri üret ve integer 40 olsun
	}

	catch(int deger){ // eðer hata deðeri integer ise içine gir
		cout << "Hata";
	}

	catch (...){ // hata deðeri integer/float/string ne olursa olsun eðer verilmiþse içine gir
		cout << "Hata 1";
	}


	return 0;
}
