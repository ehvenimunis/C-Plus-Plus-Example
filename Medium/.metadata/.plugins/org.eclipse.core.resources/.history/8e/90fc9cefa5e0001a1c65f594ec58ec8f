#include <iostream>
using namespace std;

// typename yerine "class" da yazýlabilir
template <typename T> //template prefix ( template'in önceden tanýmlanmasý)
T test(T a){ // template == þablon
	return a;
}


int main() {
	cout << "Template Function " << endl; // prints Template Function 

	cout << test(25) << endl;
	cout << test(25.6) << endl;
	cout << test("template") << esndl;
	cout << test(-25) << endl;

	return 0;
}

/*
 * Template fonksiyonlarý kullanmak, soyut algoritma yazmanýn yollarýndan bi tanesi. Template fonksiyonlar yazdýðýmýzda,
 * yazdýðýmýz algoritma tiplere baðlý olmadan çalýþýyor. Biz algoritmayý yazabildiðimiz en genel haliyle yazýyoruz, sonra
 * içine istediðimiz veri tipini göndererek çalýþmasýný saðlýyoruz bu þekilde yazdýðýmýz algoritmalar, soyut(abstract)
 * algoritmalar oluyor.
 */
